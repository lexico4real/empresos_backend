{
  "name": "Empresos App Backend",
  "version": "1.0.0",
  "description": "Empresos is a secure and innovative digital banking platform that provides seamless financial services, including account management, fund transfers, bill payments, and investment options. Designed for both individuals and businesses, it ensures fast, reliable, and user-friendly banking experiences.",
  "author": "Golden Crest Tech",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^0.1.0",
    "@nestjs/bull": "^10.2.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^7.0.0",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/terminus": "^7.2.0",
    "@nestjs/throttler": "^6.2.1",
    "@nestjs/typeorm": "^7.0.3",
    "@types/cookie-session": "^2.0.44",
    "@vonage/server-sdk": "^3.20.0",
    "autocannon": "^7.10.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.8.0",
    "config": "^3.3.8",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.0",
    "express": "^5.1.0",
    "ioredis": "^5.4.1",
    "js-yaml": "^4.1.0",
    "jsontoxml": "^1.0.1",
    "log4js": "^6.7.0",
    "nestjs-cookie-session": "^2.0.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "qrcode": "^1.5.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/swagger": "^4.8.2",
    "@nestjs/testing": "^7.6.18",
    "@types/compression": "^1.7.2",
    "@types/config": "^3.3.0",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/qrcode": "^1.5.0",
    "@types/request": "^2.48.8",
    "@types/speakeasy": "^2.0.7",
    "@types/supertest": "^2.0.11",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "node-notifier": "^10.0.1",
    "nodemailer": "^6.8.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "swagger-ui-express": "^4.6.3",
    "ts-jest": "^27.1.5",
    "ts-loader": "^5.0.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.15.0",
    "tslib": "1.11.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
